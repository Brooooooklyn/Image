  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@napi-rs/cli": "^2.4.0",
    "@types/node": "^17.0.8",
    "ava": "^4.0.1",
    "lerna": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "typescript": "^4.5.4"
  },
  "scripts": {
    "artifacts": "lerna run artifacts",
    "build": "lerna run build --stream --concurrency 1 --no-prefix",
    "build:ts": "tsc -b tsconfig.project.json",
    "test": "ava"
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "trailingComma": "all",
    "singleQuote": true,
    "arrowParens": "always"
  },
  "ava": {
    "extensions": [
      "mjs"
    ],
    "timeout": "3m",
    "environmentVariables": {
      "NODE_ENV": "ava"
    }
  },
  "packageManager": "yarn@3.1.1",
  "repository": "git@github.com:Brooooooklyn/Image.git"
